<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 填充 -->
            <solid android:color="@color/app_colorPrimaryDark" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/app_colorPrimaryDark" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>

            <!-- 填充 -->
            <solid android:color="@color/app_colorPrimaryDark" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/app_colorPrimaryDark" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>

            <!-- 填充 -->
            <solid android:color="@color/app_colorPrimary" />
            <!-- 描边 -->
            <stroke android:width="1dp" android:color="@color/app_colorPrimary" />
            <!-- 圆角 -->
            <corners android:radius="2dp" />
        </shape>
    </item>

</selector>