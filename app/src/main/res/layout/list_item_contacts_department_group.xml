<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mCaptialChar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/pub_backgroud_color"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="@color/tvc3"
        android:textSize="@dimen/app_text_14"
        android:visibility="gone" />

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/line_height"-->
    <!--android:background="@color/pub_line_color" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/parent_margin">

        <ImageView
            android:id="@+id/mCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:paddingBottom="@dimen/parent_margin"
            android:paddingLeft="@dimen/parent_margin"
            android:paddingRight="15dp"
            android:paddingTop="@dimen/parent_margin"
            android:src="@drawable/selector_contacts_check"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mDepartmentName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <LinearLayout
            android:id="@+id/mDepartmentImageLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/mDepartmentImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_banner_down" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

</LinearLayout>