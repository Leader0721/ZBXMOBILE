<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout_MessageCenter"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:background="@drawable/style_list_trans_white"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imageView_MessageCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:padding="@dimen/parent_margin_top"
                android:src="@mipmap/icon_messages" />

            <ImageView
                android:id="@+id/imageView1_MessageCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="7dp"
                android:src="@mipmap/icon_g"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/title_MessageCenter"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="公告消息"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_16_middle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_MessageCenter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text="暂无"
                    android:textColor="@color/tvc6"
                    android:textSize="@dimen/app_text_12_small" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/icon_arrows" />
    </LinearLayout>



</LinearLayout>