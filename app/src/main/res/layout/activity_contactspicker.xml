<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/mContactsFragment"
        android:name="com.zbxn.fragment.AddrBookGroupFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/pub_backgroud_color">

        <Button
            android:id="@+id/mBtBack"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/style_bt_nav_trans"
            android:text="取消"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_12_small" />

        <Button
            android:id="@+id/mBtnOk"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/style_bt_nav_trans"
            android:text="确定"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_12_small" />

    </RelativeLayout>

</LinearLayout>