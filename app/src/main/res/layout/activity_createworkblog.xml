<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <widget.slidebottompanel.SlideBottomPanel
            android:id="@+id/mSlideBottomPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:sbp_background_layout="@layout/createworkblog_content"
            app:sbp_panel_height="280dp"
            app:sbp_title_height_no_display="0dp">

            <include layout="@layout/pub_listpanel" />
        </widget.slidebottompanel.SlideBottomPanel>
    </ScrollView>

</RelativeLayout>