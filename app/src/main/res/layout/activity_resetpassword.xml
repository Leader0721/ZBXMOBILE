<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:layout_marginTop="@dimen/app_text_22"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/mMobilePhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/password_password"
            android:gravity="center|left"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/app_text_12_small"
            android:textColor="@color/app_primary_text"
            android:textColorHint="@color/pub_backgroud_color"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/mVerificationCode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/password_password"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/app_text_12_small"
            android:textColor="@color/app_primary_text"
            android:textColorHint="@color/pub_backgroud_color"
            />

        <TextView
            android:id="@+id/mVerification"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/password_password_2"
            android:gravity="center"
            android:padding="10dp"
            android:text="获取验证码"
            android:textSize="@dimen/app_text_14"
            />


    </LinearLayout>

    <EditText
        android:id="@+id/mNewPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/password_password"
        android:hint="输入新密码（字母加数字，8-20位）"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/app_text_12_small"
        android:textColor="@color/app_primary_text"
        android:textColorHint="@color/pub_backgroud_color"
        />

    <EditText
        android:id="@+id/mPasswordAgain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="@dimen/app_text_22"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/password_password"
        android:hint="重新确认密码"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/app_text_12_small"
        android:textColor="@color/app_primary_text"
        android:textColorHint="@color/pub_backgroud_color"
        />


    <Button
        android:id="@+id/mComplete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="40dp"
        android:background="@drawable/style_tijao"
        android:text="提交"
        android:textSize="@dimen/app_text_16_middle"
        android:textColor="@color/white"
        />


</LinearLayout>