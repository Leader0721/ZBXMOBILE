<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pub_backgroud_color"
        android:scrollbars="none">

        <widget.slidebottompanel.SlideBottomPanel
            android:id="@+id/mFeedb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pub_backgroud_color"
            app:sbp_background_layout="@layout/feedback_content"
            app:sbp_panel_height="280dp"
            app:sbp_title_height_no_display="0dp">

            <include layout="@layout/pub_listpanel" />
        </widget.slidebottompanel.SlideBottomPanel>
    </ScrollView>

</RelativeLayout>
