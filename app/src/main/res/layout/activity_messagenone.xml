<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <View
        android:background="@color/pub_line_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/mMessageNoneOpen"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开启"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_16_middle" />

        <ImageView
            android:id="@+id/imageView_Open"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="centerInside"
            android:src="@mipmap/duihao" />
    </LinearLayout>
    <View
        android:background="@color/pub_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>

    <LinearLayout
        android:id="@+id/mMessageNoneOpenNight"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="只在夜间开启"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_16_middle" />

        <ImageView
            android:id="@+id/imageView_OpenNight"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:src="@mipmap/duihao" />
    </LinearLayout>
    <View
        android:background="@color/pub_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>


    <LinearLayout
        android:id="@+id/mMessageNoneClose"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="关闭"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_16_middle" />

        <ImageView
            android:id="@+id/imageView_Close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:src="@mipmap/duihao" />
    </LinearLayout>
    <View
        android:background="@color/pub_line_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>

    <TextView
        android:layout_margin="10dp"
        android:text="开启后，收到新消息后，手机不会震动与发出提示音。如果设置为“只在夜间开启”，则只在晚上22:00至早上08:00间生效。"
        android:textSize="@dimen/app_text_16_middle"
        android:textColor="@color/tvc6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>