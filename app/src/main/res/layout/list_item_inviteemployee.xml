<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:descendantFocusability="afterDescendants"
    android:layout_height="match_parent">



    <LinearLayout
        android:clickable="true"
        android:id="@+id/linearlayout_invite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:background="@color/pub_backgroud_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin"/>

        <!-- 邀请员工-->
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple">
            <ImageView
                android:id="@+id/delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/parent_margin_top"
                android:src="@mipmap/delete" />

            <TextView
                android:id="@+id/num_inviteEmpl"
                android:layout_marginLeft="@dimen/parent_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_16_middle"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="fill_horizontal|center_vertical"
                android:text="姓\u3000名"
                android:textColor="#333333"
                android:textSize="@dimen/app_text_14" />

            <EditText
                android:id="@+id/invite_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:hint="请输入姓名"
                android:background="@drawable/bg_edittext_inviteempl"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/tvc9"
                android:textColor="@color/tvc3"
                android:imeOptions="actionNext"
                android:ellipsize="end"
                android:textSize="@dimen/app_text_14" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin" />
        <!-- 手机号-->
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="fill_horizontal|center_vertical"
                android:text="手机号"
                android:textColor="#333333"
                android:textSize="@dimen/app_text_14" />

            <EditText
                android:id="@+id/invite_phoneNum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:hint="请输入手机号"
                android:phoneNumber="true"
                android:background="@drawable/bg_edittext_inviteempl"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textColorHint="@color/tvc9"
                android:textColor="@color/tvc3"
                android:imeOptions="actionNext"
                android:ellipsize="end"
                android:textSize="@dimen/app_text_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>