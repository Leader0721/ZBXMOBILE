<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical"
    tools:context="com.zbxn.main.activity.org.InviteStaffActivity">

    <!-- 姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_name1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="姓       名"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_name1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:hint="请输入姓名"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />
    <!-- 联系方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_phoneno1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="联系方式"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_phoneno1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:hint="请输入手机号码"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

