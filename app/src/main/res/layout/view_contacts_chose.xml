<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/pub_backgroud_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mCheck"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/selector_contacts_check"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingLeft="@dimen/parent_margin"
            android:text="全选"
            android:textColor="@color/orange"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mTextSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/parent_margin"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="已选择:0人"
            android:textColor="@color/orange"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mTextOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/parent_margin"
            android:layout_marginRight="@dimen/parent_margin"
            android:background="@drawable/selector_btn_orange"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/parent_margin"
            android:paddingRight="@dimen/parent_margin"
            android:paddingTop="5dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

</LinearLayout>