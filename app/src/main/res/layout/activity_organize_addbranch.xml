<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeff6"
    android:orientation="vertical">

    <!--上级部门-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin"
            android:background="@drawable/bg_ripple"
            android:orientation="horizontal"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="上级部门"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14" />

            <TextView
                android:id="@+id/tv_branch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="end|center_vertical"
                android:hint="请选择上级部门"
                android:onClick="onClick"
                android:textColor="@color/tvc3"
                android:textColorHint="@color/tvc9"
                android:textSize="@dimen/app_text_14" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/parent_margin"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />
    <!-- 部门名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/parent_margin"
            android:gravity="fill_horizontal|center_vertical"
            android:text="部门名称"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_branchname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入部门名称"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvc9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/parent_margin"
            android:text="部门描述"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginLeft="@dimen/parent_margin"
            android:layout_marginRight="@dimen/parent_margin"
            android:background="@drawable/bg_edittext_shape"
            android:gravity="left|top"
            android:hint="请输入部门描述..."
            android:inputType="textMultiLine"
            android:minLines="6"
            android:padding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

</LinearLayout>
