<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="用户号"
            android:drawableLeft="@mipmap/my_account"
            android:drawablePadding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mUserNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:visibility="gone"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:visibility="gone"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/my_department"
            android:drawablePadding="@dimen/parent_margin"
            android:text="公司"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mCompanyName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="部门"
            android:drawableLeft="@mipmap/my_department"
            android:drawablePadding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mDepartmentName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="职位"
            android:drawableLeft="@mipmap/my_position"
            android:drawablePadding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mPosition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:id="@+id/mLayoutEmail"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/my_email"
            android:drawablePadding="@dimen/parent_margin"
            android:text="邮箱"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:id="@+id/mLayoutMobile"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingTop="@dimen/parent_margin_top"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/my_mobile"
            android:drawablePadding="@dimen/parent_margin"
            android:gravity="center_vertical"
            android:text="手机"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mMobileNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

    <LinearLayout
        android:id="@+id/mLayoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/parent_margin_top"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="@dimen/parent_margin"
        android:paddingTop="@dimen/parent_margin_top"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="电话"
            android:drawableLeft="@mipmap/my_phone"
            android:drawablePadding="@dimen/parent_margin"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <TextView
            android:id="@+id/mPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingLeft="24dp"
            android:textColor="@color/tvc9"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/pub_line_color" />

</LinearLayout>