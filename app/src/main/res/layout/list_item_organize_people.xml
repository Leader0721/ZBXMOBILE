<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ripple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mCaptialChar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/pub_backgroud_color"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/parent_margin"
        android:textColor="@color/tvc3"
        android:textSize="@dimen/app_text_14"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/mLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/parent_margin"
        android:paddingRight="15dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mPortrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/parent_margin"
            android:layout_marginTop="@dimen/parent_margin"
            android:src="@mipmap/temp110"
            app:civ_border_color="@color/pub_backgroud_color"
            app:civ_border_overlay="true"
            app:civ_border_width="1dp"
            app:civ_fill_color="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mRemarkName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/my_man"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/parent_margin"
                        android:text="姓名"
                        android:textColor="@color/tvc3"
                        android:textSize="@dimen/app_text_16_middle" />

                    <TextView
                        android:id="@+id/mNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/parent_margin"
                        android:gravity="center_vertical"
                        android:text="(000)"
                        android:textColor="@color/tvc9"
                        android:textSize="@dimen/app_text_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/my_design"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/parent_margin"
                        android:text="部门"
                        android:textColor="@color/tvc9"
                        android:textSize="@dimen/app_text_14" />

                    <TextView
                        android:id="@+id/tv_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/my_director"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/parent_margin"
                        android:text="职位"
                        android:textColor="@color/tvc9"
                        android:textSize="@dimen/app_text_14" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/pub_line_color" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
