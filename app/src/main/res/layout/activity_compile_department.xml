<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical">

    <!--上级部门-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/white"
        android:gravity="end">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="上级部门"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_branch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:hint="开发部"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />
    <!-- 部门名称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="部门名称"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_branchname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="4"
            android:gravity="end|center_vertical"
            android:hint="开发一部"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:text="部门描述"
            android:textColor="@color/black"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:background="@drawable/bg_edittext_shape"
            android:id="@+id/et_describe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="left|top"
            android:hint="开发部是一个积极向上的部门，高级工程师4人，中级16人，初级5人"
            android:inputType="textMultiLine"
            android:minLines="6"
            android:padding="@dimen/activity_horizontal_margin"
            android:textColorHint="@color/gray_holo_light"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="@dimen/activity_vertical_margin"
            android:text="删除部门"
            android:textColor="@color/red"
            android:textSize="@dimen/app_text_14"
            android:id="@+id/textView2" />

    </RelativeLayout>
</LinearLayout>
