<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pub_backgroud_color"
    android:orientation="vertical">

    <!-- 姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/parent_margin"
        android:background="@drawable/bg_ripple"
        android:clickable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/parent_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="姓\u3000\u3000名"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入姓名"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvc9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />
    <!-- 初始密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:clickable="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/parent_margin"
            android:layout_weight="1"
            android:gravity="fill_horizontal|center_vertical"
            android:text="初始密码"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="4"
            android:background="@null"
            android:gravity="end|center_vertical"
            android:hint="请输入初始密码"
            android:textColor="@color/tvc3"
            android:textColorHint="@color/tvc9"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/app_text_14" />

    </LinearLayout>

    <!-- 第一份-->
    <!-- 兼职部门-->
    <LinearLayout
        android:id="@+id/ll_extra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置部门-->
        <RelativeLayout
            android:id="@+id/layout_branch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin"
            android:background="@drawable/bg_ripple"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_branch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置部门"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14" />

            <TextView
                android:id="@+id/tv_branch1_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:hint="请选择部门"
                android:textColor="@color/tvc9" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_branch1"
                android:layout_alignRight="@+id/tv_branch1"
                android:layout_alignTop="@+id/tv_branch1"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置岗位-->
        <RelativeLayout
            android:id="@+id/layout_job1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple"
            android:clickable="true">

            <TextView
                android:id="@+id/tv_job1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置职位"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14" />

            <TextView
                android:id="@+id/tv_job_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_job1"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView4"
                android:hint="请选择职位"
                android:textColor="@color/tvc9" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_job1"
                android:layout_alignRight="@+id/tv_job1"
                android:layout_alignTop="@+id/tv_job1"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />


        </RelativeLayout>
    </LinearLayout>
    <!-- 第二份-->
    <LinearLayout
        android:id="@+id/ll_extra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <!-- 兼职部门-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin"
            android:background="@drawable/bg_ripple">

            <ImageView
                android:id="@+id/delete_child1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/parent_margin_top"
                android:src="@mipmap/delete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="兼职部门(1)"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/app_text_14" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置部门-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_branch2"
            android:background="@drawable/bg_ripple">

            <TextView
                android:id="@+id/tv_branch2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置部门"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_branch2_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_toLeftOf="@+id/imageView5"
                android:layout_toStartOf="@+id/imageView5"
                android:hint="请选择部门"
                android:textColor="@color/tvc9" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_branch2"
                android:layout_alignRight="@+id/tv_branch2"
                android:layout_alignTop="@+id/tv_branch2"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置岗位-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_job2"
            android:background="@drawable/bg_ripple">

            <TextView
                android:id="@+id/tv_job2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置职位"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_job2_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_job2"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toStartOf="@+id/imageView6"
                android:hint="请选择职位"
                android:textColor="@color/tvc9" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_job2"
                android:layout_alignRight="@+id/tv_job2"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />


        </RelativeLayout>
    </LinearLayout>
    <!-- 第三份-->
    <LinearLayout
        android:id="@+id/ll_extra3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/parent_margin"
            android:background="@drawable/bg_ripple">

            <ImageView
                android:id="@+id/delete_child2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/parent_margin_top"
                android:src="@mipmap/delete" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/parent_margin_top"
                android:gravity="center_vertical"
                android:text="兼职部门(2)"
                android:textColor="@color/tvc9"
                android:textSize="@dimen/app_text_14" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置部门-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_branch3"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_ripple">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_branch3"
                android:layout_alignRight="@+id/tv_branch3"
                android:layout_alignTop="@+id/tv_branch3"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />

            <TextView
                android:id="@+id/tv_branch3_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView7"
                android:layout_toLeftOf="@+id/imageView7"
                android:layout_toStartOf="@+id/imageView7"
                android:hint="请选择部门"
                android:textColor="@color/tvc9" />

            <TextView
                android:id="@+id/tv_branch3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置部门"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height" />
        <!-- 配置岗位-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_job3"
            android:background="@drawable/bg_ripple">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignEnd="@+id/tv_job3"
                android:layout_alignRight="@+id/tv_job3"
                android:layout_alignTop="@+id/tv_job3"
                android:scaleType="centerInside"
                android:src="@mipmap/bg_divider_1" />


            <TextView
                android:id="@+id/tv_job3_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView8"
                android:layout_toLeftOf="@+id/imageView8"
                android:layout_toStartOf="@+id/imageView8"
                android:hint="请选择职位"
                android:textColor="@color/tvc9" />

            <TextView
                android:id="@+id/tv_job3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/parent_margin"
                android:gravity="center_vertical"
                android:text="配置职位"
                android:textColor="@color/tvc3"
                android:textSize="@dimen/app_text_14"
                android:visibility="visible" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rll_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/parent_margin"
        android:layout_marginRight="@dimen/parent_margin"
        android:layout_marginTop="@dimen/parent_margin"
        android:background="@drawable/bg_edittext_shape"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/et_addjob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/my_tianjia"
            android:drawablePadding="@dimen/parent_margin"
            android:gravity="center"
            android:padding="@dimen/parent_margin_large"
            android:text="添加兼职部门职位"
            android:textColor="@color/tvc3"
            android:textSize="@dimen/app_text_14" />
    </LinearLayout>

</LinearLayout>
